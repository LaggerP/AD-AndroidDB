<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JugadoresActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Gestion de Jugadores"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="id del jugador"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:id="@+id/txtIdJugador"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="nombre del jugador"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:id="@+id/txtJugador"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="id del club"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:id="@+id/txtIdClub"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="first"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:id="@+id/btnFirst"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prior"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:id="@+id/btnPrior"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:id="@+id/btnNext"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="last "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:id="@+id/btnLast"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/btnLimpiar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/btnAgregar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/btnActualizar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:textSize="15dp"
        android:textAlignment="center"
        android:id="@+id/btnEliminar"/>

</LinearLayout>